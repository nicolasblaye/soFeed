<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ActivitÃ©s"
        android:id="@+id/textView2"
        android:textColor="#2f41a9"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piscine"
        android:id="@+id/button"
        android:layout_marginTop="33dp"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toStartOf="@+id/button7"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badminton"
        android:id="@+id/button2"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running"
        android:id="@+id/button3"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_alignTop="@+id/button4"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toStartOf="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinema"
        android:id="@+id/button4"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ping-Pong"
        android:id="@+id/button5"
        android:textAlignment="center"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizzeria"
        android:id="@+id/button6"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New?"
        android:id="@+id/button7"
        android:layout_marginTop="30dp"
        android:textColor="#2f41a9"
        android:background="#9cb4f1"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
