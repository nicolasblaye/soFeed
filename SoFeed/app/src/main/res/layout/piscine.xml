<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_piscine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="fr.infotel.sofeed.PiscineActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Piscine"
        android:id="@+id/textView2"
        android:textColor="#2f41a9"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/appbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />


    <ImageView
        android:layout_width="92dp"
        android:layout_height="56dp"
        android:id="@+id/imageView"
        android:src="@drawable/natation"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:layout_width="92dp"
        android:layout_height="56dp"
        android:id="@+id/imageView2"
        android:src="@drawable/natation2"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="92dp"
        android:layout_height="56dp"
        android:id="@+id/imageView3"
        android:src="@drawable/natation3"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prochain rendez-vous et/ou évènement"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#2f41a9" />

    <CalendarView
        android:layout_width="70dp"
        android:layout_height="200dp"
        android:id="@+id/calendarView"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>